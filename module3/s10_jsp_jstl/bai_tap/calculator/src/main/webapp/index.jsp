<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<head>
    <title>Calculator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<h1 style="color:dodgerblue">Simple Calculator</h1>
<form action="/Calculator" method="get">
    <fieldset>
        <label>First Operand</label>
        <input type="text" name="firstOperand" style="margin-left: 23px">
        <br>
        <label>Operand</label>
        <select name="select" style="margin-left: 57px">
            <option value="Add">Addition</option>
            <option value="Sub">Subtraction</option>
            <option value="Mul">Multiplication</option>
            <option value="Div">Division</option>
        </select>
        <br>
        <label>Second Operand</label>
        <input type="text" name="secondOperand">
        <br>
        <input type="submit" value="calculate" style="margin-left: 50px">
    </fieldset>
</form>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
